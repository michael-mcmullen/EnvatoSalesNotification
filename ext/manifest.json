{
  "name": "Envato Sales Notifications",
  "version": "3.0.0",
  "manifest_version": 2,
  "description": "This extension will send a notification to your screen when a sale has been made on the Envato Marketplaces",
  "homepage_url": "http://www.tutelagesystems.com",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "src/bg/background.js"
    ],
    "persistent": true
  },
  "options_page": "src/options_custom/index.html",
  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Envato Sales Notifications"
  },
  "permissions": [
    "alarms",
    "notifications",
    "tabs",
    "http://marketplace.envato.com/*"
  ],
  "web_accessible_resources": [
    "icons/icon48.png"
  ]
}